{
  "name": "nodevfee",
  "version": "1.0.0",
  "description": "Ethernium node with no dev fee",
  "license": "MIT",
  "repository": "UrielCh/NoDevFee",
  "funding": "https://github.com/sponsors/urielch",
  "author": {
    "name": "Uriel Chemouni",
    "email": "uchemouni@gmail.com",
    "url": "https://urielch.github.io/"
  },
  "type": "module",
  "engines": {
    "node": ">=12.20"
  },
  "bin": {
    "nodevfee": "./nodevfee"
  },
  "main": "index.js",
  "scripts": {
    "start": "ts-node index.ts",
    "clean": "rimraf src/*.js",
    "build:watch": "tsc -p . --watch",
    "build": "tsc -p .",
    "test": "npm run build && ava",
    "prepack": "npm run build"
  },
  "files": [
    "*.js"
  ],
  "dependencies": {
    "chalk": "^5.0.0",
    "meow": "^10.1.2",
    "promise-socket": "^7.0.0",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "ava": "^4.0.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.5.0",
    "xo": "^0.48.0"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [
      "test/*.test.ts"
    ],
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  }
}
